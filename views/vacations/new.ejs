<div class="data-form">
  <form class="form-signin" action="<%=`/vacations/create`%>" method="POST">
    <h2 class="form-signin-heading">Create a Culinary Package:</h2>
    <label for="inputTitle">Title</label>
    <input type="text" name="title" id="inputTitle" class="form-control" placeholder="Title" required="">

    <label for="inputDescription">Description</label>
    <input type="text" name="description" id="inputDescription" class="form-control" placeholder="Please Enter Description" required="">
    
    <label for="inputTitle">Cuisine Type</label>
    <select name="cuisine" id="inputCuisine" required="" class="form-control">
      <option value="" disabled="" selected="">--Please choose an option--</option>
      <option value="Continental">Continental</option>
      <option value="Traditional">Traditional</option>
      <option value="Haute-cuisine">Haute-cuisine</option>
      <option value="Nouvelle-cuisine">Nouvelle-cuisine</option>
      <option value="Fusion">Fusion</option>
      <option value="Vegan">Vegan</option>
      <option value="Vegetarian">Vegetarian</option>
      <option value="Asian">Asian</option>
      <option value="Indian">Indian</option>
      <option value="Middle-Eastern">Middle-Eastern</option>
      <option value="African">African</option>
      <option value="Central American">Central American</option>
      <option value="South American">South American</option>
    </select>

    <label for="inputImage">Vacation Hero Image</label>
    <input type="text" name="heroImage" id="inputImage" class="form-control" placeholder="Please Enter Vacation Hero Image" required="">

    <label for="inputCost">Cost ($)</label>
    <input type="number" name="cost" id="cost" class="form-control" min=0  placeholder="Please Enter Cost">

    <label for="inputTraveler">Max Traveler</label>
    <input type="number" name="maxTravelers" id="inputTraveler" min="0" max="25" class="form-control" placeholder="Please Enter Max Travelers">

    <label for="inputDestination">Destination</label>
    <input type="text" name="destination" id="inputDestination"  class="form-control" required="" placeholder="Please Enter Destination">


    <label for="inputDepartureLocation">Departure Location</label>
    <select name="departureLocation" id="inputDepartureLocation" required="" class="form-control" required="">
      <option value="New York (JFK)">New York (JFK)</option>
      <option value="Boston (BOS)">Boston (BOS)</option>
      <option value="Chicago (ORD)">Chicago (ORD)</option>
      <option value="Miami (MIA)">Miami (MIA)</option>
      <option value="St. Louis (STL)">St. Louis (STL)</option>
      <option value="Dallas (DFW)">Dallas (DFW)</option>
      <option value="Seattle (SEA)">Seattle (SEA)</option>
      <option value="San Francisco (SFO)">San Francisco (SFO)</option>
    </select>


    <label for="inputDepartureDate">Departure Date</label>
    <input type="date" name="departureDate" id="inputDepartureDate"  required="" class="form-control" placeholder="Please Enter Departure Date">


    <label for="inputretDate">Return Date</label>
    <input type="date" name="returnDate" id="inputretDate" required="" class="form-control" placeholder="Please Enter Return Date">



    <br /><button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
  </form>
</div>
